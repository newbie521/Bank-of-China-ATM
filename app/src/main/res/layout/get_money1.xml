<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="请输入取款金额"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:hint="请输入取款金额"
        android:textSize="30sp" />

    <com.example.atm.MyButton
        android:id="@+id/button_100"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        app:mybutton_text="100" />

    <com.example.atm.MyButton
        android:id="@+id/button_200"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_100"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        app:mybutton_text="200" />

    <com.example.atm.MyButton
        android:id="@+id/button_500"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_200"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        app:mybutton_text="500" />

    <com.example.atm.MyButton
        android:id="@+id/button_1000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_500"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        app:mybutton_text="1000" />

    <com.example.atm.MyButton
        android:id="@+id/确认"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        app:mybutton_text="确认" />

    <com.example.atm.MyButton
        android:id="@+id/返回"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/确认"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        app:mybutton_text="返回" />

    <com.example.atm.MyButton
        android:id="@+id/退卡"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_500"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        app:mybutton_text="退卡" />


</RelativeLayout>