<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80sp"
        android:text="请选择查询内容"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <com.example.atm.util.MyButton
        android:id="@+id/余额查询"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="220sp"
        app:mybutton_text="余额查询" />

    <com.example.atm.util.MyButton
        android:id="@+id/交易明细查询"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/余额查询"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="100sp"
        app:mybutton_text="交易明细查询" />


    <com.example.atm.util.MyButton
        android:id="@+id/返回"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="220sp"
        android:layout_marginRight="20sp"
        app:mybutton_text="返回" />

    <com.example.atm.util.MyButton
        android:id="@+id/退卡"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/返回"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100sp"
        android:layout_marginRight="20sp"
        app:mybutton_text="退卡" />


</RelativeLayout>